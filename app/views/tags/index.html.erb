<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <h1> Tags </h1>
   </section>
   <!-- Main content -->
   <section class="content">
    <div class="box box-info">
    
      <div class="text-right attendee-cent-s form-group">
      	<%= link_to "Add Tags", new_tag_path, :class => "btn btn-default btn-green" %>        
      </div>
           <div class="box-body">
             <table id="example2" class="table table-bordered table-hover">
               <thead>
                 <tr>
           				<th>Name</th>
           				<th>Action</th>
           			</tr>
               </thead>
               <% @tags.each do |tag| %>
           			<% unless tag.eql?(nil) %>
           				<tbody>
           					<tr class="even">
           						<td style="max-width: 400px;"><%= truncate(tag.name, omision: "...", length: 30)%> </td>           						<td>
           						<!-- <a href="/tags/<%= tag.id%>" class="btn btn-default btn-green">View</a> -->
           							<a href="/tags/<%= tag.id%>/edit" class="btn btn-default btn-green">Edit</a>
           							<a>
           							<%= link_to 'Delete'.html_safe,  tag_path(tag.id), method: :delete,:class=>"btn btn-default btn-red", data: {confirm: 'Are you sure to delete this tag?' }%></a></td>
           					</tr>
           				</tbody>
           			<%end%>
           		<%end%>
           	</table>
            <%= will_paginate %>
           </div>
         </div>
   </section>
   <!-- /.content -->
 </div>
 
