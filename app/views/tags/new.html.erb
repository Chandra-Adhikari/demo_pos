<div class="content-wrapper">
  <section class="main-block">
    <div class="container">
      <div class="row">
        <div class="tab-content">
  				<div class="tab-pane fade active in" id="default-tab-1">
  					<div class="tab-pane">
  							<%= form_for @tag,url: tags_path, method: :post do |f|%>
  								<div class="detail-form m-t-40 m-b-40">

  									<div class="form-group">
  										<div class="row">
  											<label class="col-sm-4 col-md-3 control-label">Tag Name</label>
  											<div class="col-sm-8 col-md-7">
  											  <%= f.text_field :name, class: "form-control", required: true, placeholder:"Tag Name"%>
  											</div>
  										</div>
  									</div>

  									<div class="form-group">
  										<div class="text-center attendee-cent-s">
  											<button class="btn btn-default btn-green" type="submit">Submit</button>

  										</div>
									</div>
								</div>
							<%end%>
						</div>
  				</div>
        </div>
      </div>
    </div>
  </section>
</div>
