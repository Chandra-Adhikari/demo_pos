<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <h1> Orders </h1>
   </section>
   <!-- Main content -->
   <section class="content">
    <div class="box box-info">
      <%#= form_tag admin_orders_path, method: :get, class:"c_form" do  %>
       <!-- <div class="input-group">
         <%#=  text_field_tag :search, "", class:"form-control" %>
         <div class="input-group-btn">
           <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
         </div>
       </div> -->
      <%#end%>
      <!-- <div class="text-right attendee-cent-s form-group">
      	<%#= link_to "Add Product", new_admin_order_path, :class => "btn btn-default btn-green" %>
      </div> -->
           <div class="box-body">
             <table id="example2" class="table table-bordered table-hover">
               <thead>
                 <tr>
           			<th>Order placed At</th>
                   <th>Total Amount(Rs)</th>
                   <th>Tax Amount</th>
           				<th>Actions</th>

           			</tr>
               </thead>
               <% @orders.each do |order| %>
                 <% unless order.eql?(nil) %>
                   <tbody>
                     <tr class="even">
                       <td><%= order.created_at.strftime("%d %B %Y") %></td>
                       <td><%= number_with_precision(order.total_amount, :precision => 2) %></td/>
                       <td><%= number_with_precision(order.tax_amount, :precision => 2) %></td>
                       <td style="max-width: 350px;">
                         <a><%= link_to "View", order_path(id: order.id), :class=>"btn btn-default btn-green"%></a>
                         <!-- <a><%#= link_to "Edit", edit_admin_order_path(id: order.id), :class=>"btn btn-default btn-green"%></a>
                         <a>
                         <%#= link_to 'Delete'.html_safe,  admin_order_path(order.id), method: :delete,:class=>"btn btn-default btn-red", data: {confirm: 'Are you sure to delete this order?' }%></a> -->
                        </td>
                     </tr>
                   </tbody>
                 <%end%>
               <%end%>
             </table>
             <%= will_paginate @orders %>
           </div>
         </div>
   </section>
   <!-- /.content -->
 </div>
